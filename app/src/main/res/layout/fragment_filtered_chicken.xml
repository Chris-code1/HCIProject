<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="50dp">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/chicken2" />

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="63dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:text="Chicken parmo"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="12dp"
                    app:srcCompat="@drawable/four_eightstars" />
                />

            </LinearLayout>

            <TextView
                android:layout_width="81dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:padding="10dp"
                android:text="22,20€"
                android:textColor="#5f6368"
                android:textSize="18dp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <View
            android:id="@+id/divider21"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="120dp"
            android:background="?android:attr/listDivider" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/recipe3" />

            <LinearLayout
                android:layout_width="185dp"
                android:layout_height="63dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:text="Creamy chicken korma"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="12dp"
                    app:srcCompat="@drawable/four_eightstars" />
                />

            </LinearLayout>

            <TextView
                android:layout_width="81dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:padding="10dp"
                android:text="21,10€"
                android:textColor="#5f6368"
                android:textSize="18dp"
                android:textStyle="normal|bold" />
        </LinearLayout>

        <View
            android:id="@+id/divider232"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="120dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:id="@+id/layoutJohnsThaiChickenFiltered">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/chicken1" />

            <LinearLayout
                android:id="@+id/layoutJohnsThaiChicken"
                android:layout_width="185dp"
                android:layout_height="63dp"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:paddingLeft="25dp"
                    android:text="Johns Thai Chicken Curry"
                    android:textAlignment="viewStart"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <ImageView
                    android:layout_width="121dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="12dp"
                    app:srcCompat="@drawable/fivestars" />
                />

            </LinearLayout>

            <TextView
                android:layout_width="81dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingExtra="8sp"
                android:padding="10dp"
                android:text="18,65€"
                android:textColor="#5f6368"
                android:textSize="18dp"
                android:textStyle="normal|bold" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>