<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="50dp"

        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingLeft="10dp">



        <LinearLayout
            android:layout_width="211dp"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/text0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="2 Items in your cart!"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16dp"
                android:textStyle="bold" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/chicken_boneless_500x500" />

            <LinearLayout
                android:layout_width="143dp"
                android:layout_height="63dp"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/text13"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="25dp"
                    android:text="Chicken breast"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="25dp"
                    android:text="400g"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text24"
                android:layout_width="141dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:text="$7.80"
                android:textSize="25dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:contentDescription="TODO"
                app:srcCompat="@drawable/rice" />

            <LinearLayout
                android:layout_width="143dp"
                android:layout_height="63dp"
                android:orientation="vertical"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/text16"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="25dp"
                    android:text="Long Grain rice"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="19dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true"
                    android:paddingLeft="25dp"
                    android:text="12 Units"
                    android:textSize="14dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/text27"
                android:layout_width="141dp"
                android:layout_height="64dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:padding="10dp"
                android:text="$5.90"
                android:textSize="25dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="44dp"
            android:orientation="vertical"
            android:paddingTop="15dp">

            <View
                android:layout_width="392dp"
                android:layout_height="3dp"
                android:background="#CD4D4343" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <TextView

                android:layout_width="394dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:paddingLeft="20dp"
                android:text="TOTAL:                                       $13.70"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="67dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <Button
                android:id="@+id/btn_pay"
                android:layout_width="391dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="@android:color/holo_orange_light"
                android:paddingLeft="25dp"
                android:text="Add more products"
                android:textSize="22dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="411dp"
            android:layout_height="67dp"
            android:orientation="horizontal"
            android:paddingTop="15dp">

            <Button
                android:id="@+id/btn_best_route"
                android:layout_width="391dp"
                android:layout_height="48dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="@android:color/holo_orange_light"
                android:paddingLeft="25dp"
                android:text="PAY"
                android:textSize="22dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
